doctype 5
html.
	<head>
		<meta charset="utf8">
		<base href="/">
		<title>Fresh Prints Tech Challenge</title>
		<link rel="stylesheet" href="/css/app.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	</head>
	<body>
		<div ng-controller="AppCtrl" ng-cloak></div>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="https://www.freshprintsshop.com/">
						<div class="brandimg">
							<img alt="Brand" src="https://www.freshprintsshop.com/assets/images/logo.svg">
						</div>
					</a>
					<h1>The Quoter</h1>
				</div>
			</div>
		</nav>
		<div ng-app="myApp">
			<div ng-controller="AppCtrl">
				<form ng-submit="quote()" class = "fullForm">
					<div class="form-group">
						<label for="apparelCode">Style Code</label>
						<input ng-model="apparelCode" type="code" class="form-control">
					</div>
					<div class="form-group">
						<label for="apparelColour">Color Code</label>
						<input ng-model="apparelColour" type="colour" class="form-control">
					</div>
					<div class="form-group">
						<label for="apparelSize">Size Code</label>
						<input ng-model="apparelSize" type="size" class="form-control">
					</div>
					<div class="form-group">
						<label for="apparelQuantity">Quantity</label>
						<input ng-model="apparelQuantity" type="quantity" class="form-control">
					</div>
					<button type="submit" class="btn btn-default">Submit</button>
				</form>
				<div class="hidden" id="final_display">
					<p class="lead"> The quote price per item will be ${{perItem}}.</p>
					<p class = "lead"> The total price will be ${{finalPrice}}.</p>
				</div>
				<div class="hidden" id="errors">
					<p class="lead">Sorry, we could not find any apparels matching the following details: </p>
					<p class="lead">{{errorMsg}}</p>
					<!--<p class="lead">Style Code: {{apparelCode}}</p>
					<p class="lead">Style Code: {{apparelCode}}</p>-->
				</div>
			</div>
		</div>
		<script src="js/lib/angular/angular.js"></script>
		<script src="js/app.js"></script>
		<script src="js/services.js"></script>
		<script src="js/controllers.js"></script>
		<script src="js/filters.js"></script>
		<script src="js/directives.js"></script>
	</body>